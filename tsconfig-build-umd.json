{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "package/bundles/commonjs",
    "paths": {
      "@tanbo/vue-di-plugin": [
        "src/public-api.ts"
      ],
      "@tanbo/*": [
        "src/*"
      ]
    }
  },
  "files": [
    "node_modules/reflect-metadata/reflect-metadata.d.ts"
  ],
  "include": [
    "src/public-api.ts"
  ]
}
